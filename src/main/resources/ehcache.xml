<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <!-- Default cache template for entities -->
    <cache-template name="default">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <!-- Heap storage: количество элементов в памяти -->
            <heap>1000</heap>
            <!-- Off-heap storage: размер в мегабайтах для хранения вне кучи -->
            <offheap unit="MB">50</offheap>
        </resources>
    </cache-template>

    <!-- Cache для SpaceMarine entity -->
    <cache alias="se.ifmo.ru.back.entity.SpaceMarine" uses-template="default">
        <expiry>
            <ttl unit="seconds">5</ttl>
        </expiry>
        <resources>
            <heap>500</heap>
            <offheap unit="MB">30</offheap>
        </resources>
    </cache>

    <!-- Cache для Chapter entity -->
    <cache alias="se.ifmo.ru.back.entity.Chapter" uses-template="default">
        <expiry>
            <ttl unit="seconds">5</ttl>
        </expiry>
        <resources>
            <heap>200</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <!-- Cache для Coordinates entity -->
    <cache alias="se.ifmo.ru.back.entity.Coordinates" uses-template="default">
        <expiry>
            <ttl unit="seconds">5</ttl>
        </expiry>
        <resources>
            <heap>300</heap>
            <offheap unit="MB">15</offheap>
        </resources>
    </cache>

    <!-- Cache для коллекций (collections) -->
    <cache-template name="collection">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap>500</heap>
            <offheap unit="MB">20</offheap>
        </resources>
    </cache-template>

    <!-- Cache для запросов (query cache) -->
    <cache alias="default-query-results-region" uses-template="default">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap>200</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <!-- Cache для обновлений (update timestamps) -->
    <cache alias="default-update-timestamps-region" uses-template="default">
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
        <resources>
            <heap>100</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

</config>


